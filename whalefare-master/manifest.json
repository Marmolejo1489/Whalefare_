{
  "manifest_version": 2,
  "name": "Whalefare Extension",
  "description": "Bóveda de contraseñas con auto llenado de datos",
  "homepage_url": "https://whalefare.netlify.app/",
  "version": "2.0",
  "author": "CristianC",
  "browser_action": {
    "default_icon": "./img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Whalefare"
  },
  "icons": {
    "16": "./img/16.png",
    "24": "./img/24.png",
    "32": "./img/32.png",
    "64": "./img/64.png",
    "128": "./img/128.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}